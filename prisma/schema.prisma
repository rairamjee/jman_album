generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  AwayDay
  TeamOuting
  Celebration
}

model Event {
  id            Int      @id @default(autoincrement())
  eventName     String
  eventType     Type     @default(AwayDay) // Use the enum here
  eventLocation String
  eventDate     DateTime
  images        Image[]  // Relation to images
}


model Image {
  id          Int      @id @default(autoincrement())
  key         String   // S3 key for the image
  fileName    String   // Original file name
  contentType String   // Content type (e.g., image/jpeg)
  s3Url       String   // Publicly accessible URL or the S3 key
  createdAt   DateTime @default(now())
  eventId     Int      // Foreign key to Event
  event       Event    @relation(fields: [eventId], references: [id])
}